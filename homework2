Написать программу, которая вычислит и выведет на экран площадь треугольника, если известны его стороны.

package homework2;
public class Homework2 {
    public static void main(String[] args) {
        double a = 0.3;
        double b = 0.4;
        double c = 0.5;
        double p = (a + b + c) / 2;
        double areaTriangle = Math.sqrt(p*(p-a)*(p-b)*(p-c));
        System.out.println("Площа трикутника зі сторонами 0.3, 0.4, 0.5 дорівнює "
                +areaTriangle+", при округленні "+String.format("%1.2f", areaTriangle).replace(',', '.')+".");
    }
}
