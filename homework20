/*
 * Введите строку текста с клавиатуры – реализуйте программу для возможности 
 * подсчета количества символа – ‘b’ в этой строке, с выводом результата на экран.
 */
package homework20;
import java.util.Scanner;
public class Homework20 {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.print("Введіть текст англійською мовою: ");
        String text=sc.nextLine();
        char[]t=text.toCharArray();
        int b=0;
        for(int i=0; i<t.length; i++){
            if(t[i]=='b'){
                b++;
            }
        }
        System.out.println("Кількість символів 'b' у тексті зустрічається "+b+" разів.");
    }
}
